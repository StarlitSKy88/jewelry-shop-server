{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DB_HOST": "mysql.sqlpub.com",
    "DB_PORT": "3306",
    "DB_USER": "dianshang",
    "DB_DATABASE": "dianshang"
  }
} 